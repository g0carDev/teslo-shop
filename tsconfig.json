{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "jsxImportSource": "@emotion/react",
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@components": ["components/index.ts"],
      "@layouts": ["components/layouts/index.ts"],
      "@utils": ["utils/index.ts"],
      "@hooks": ["hooks/index.ts"],
      "@themes": ["themes/index.ts"],
      "@database": ["database/index.ts"],
      "@models": ["database/models/index.ts"],
      "@services": ["database/services/index.ts"],
      "@interfaces": ["interfaces/index.ts"],
      "@context": ["context/index.ts"],
      "@api": ["api/index.ts"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
